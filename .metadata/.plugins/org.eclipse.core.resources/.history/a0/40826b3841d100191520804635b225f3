package kakao.T2020;

import java.util.*;

class Pos{
	int idx;
	int x;
	int y;
	int size;
	public Pos(int idx, int x, int y, int size) {
		this.idx = idx;
		this.x = x;
		this.y = y;
		this.size = size;
	}
}
class Comp implements Comparator<String>{
	public int compare(String a, String b) {
		return a.length() - b.length();
	}
}
public class Q4 {
	public static void main(String[] args) {
		String[]a = {"frodo", "front", "frost", "frozen", "frame", "kakao"};
		String[]b = {"fro??", "????o", "fr???", "fro???", "?????"};
		System.out.println(Arrays.toString(solution(a, b)));
	}
	public static int[] solution(String[] words, String[] queries) {
		List<Pos> list = new ArrayList<>();
		for(int i=0; i<queries.length; i++) {
			int start = queries[i].indexOf("?");
			int end = queries[i].lastIndexOf("?");
			if(start == 0) {
				list.add(new Pos(i, end+1, queries[i].length(), queries[i].length()));
			} else {
				list.add(new Pos(i, 0, start, queries[i].length()));
			}
		}
		Arrays.sort(words, new Comp());
		Arrays.sort(queries, new Comp());
		System.out.println(Arrays.toString(words));
		System.out.println(Arrays.toString(queries));
		int[] answer = new int[queries.length];
		for(int i=0; i<words.length; i++) {
			for(int j=0; j<list.size(); j++) {
				System.out.println(i+" "+j);
				int x = list.get(j).x;
				int y = list.get(j).y;
				int size = list.get(j).size;
				if(size > words[i].length()) break;
				if(size == words[i].length()&&words[i].substring(x, y).equals(queries[j].substring(x, y))) {
					answer[list.get(j).idx]++;
				}
			}
		}
		return answer;
	}
}
