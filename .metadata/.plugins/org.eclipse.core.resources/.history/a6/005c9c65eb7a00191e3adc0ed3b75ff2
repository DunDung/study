package baekjoon.divide_and_conquer;

import java.util.Scanner;

//Z
public class Q1074 {
	static int cnt = 0 ;
	static void solve(int[][]a ,int n, int x, int y) {
		if(n==2) {
			for(int i=0; i<n; i++) {
				for(int j=0; j<n; j++) {
					a[x+i][y+j]=cnt++;
				}
			}
		}
		n /= 2;
		if(n>0) {
			for(int i=0; i<2; i++) {
				for(int j=0; j<2; j++) {
					solve(a, n, x+i*n, y+j*n);
				}
			}
		}
	}

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int n = scan.nextInt();
		n = (int)Math.pow(2, n);
		int[][]a = new int[n][n];
		int r = scan.nextInt();
		int c = scan.nextInt();
		solve(a, n, 0, 0);
		System.out.println(a[r][c]);
	}
}
