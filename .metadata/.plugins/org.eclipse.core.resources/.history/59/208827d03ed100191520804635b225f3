package kakao.T2020;

import java.util.*;

class Pos{
	int x;
	int y;
	int size;
	public Pos(int x, int y, int size) {
		this.x = x;
		this.y = y;
		this.size = size;
	}
}
public class Q4 {
	public static void main(String[] args) {
		String[]a = {"frodo", "front", "frost", "frozen", "frame", "kakao"};
		String[]b = {"fro??", "????o", "fr???", "fro???", "pro?"};
		System.out.println(Arrays.toString(solution(a, b)));
	}
	public static int[] solution(String[] words, String[] queries) {
		List<Pos> list = new ArrayList<>();
		for(int i=0; i<queries.length; i++) {
			int start = queries[i].indexOf("?");
			int end = queries[i].lastIndexOf("?");
			if(start == 0) {
				list.add(new Pos(end+1, queries[i].length(), queries[i].length()));
			} else {
				list.add(new Pos(0,start, queries[i].length()));
			}
			System.out.println(i+" "+list.get(i).x+" "+list.get(i).y);
		}
		int[] answer = new int[queries.length];
		for(int i=0; i<words.length; i++) {
			for(int j=0; j<list.size(); j++) {
				int x = list.get(j).x;
				int y = list.get(j).y;
				int size = list.get(j).size;
				if(size == words[i].length()&& words[i].substring(x, y).equals(queries[j].substring(x, y))) {
					answer[j]++;
				}
			}
		}
		return answer;
	}
}
