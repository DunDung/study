package baekjoon.divide_and_conquer;

import java.util.Scanner;

//Z
public class Q1074 {
	static int cnt = 0 ;
	static int r;
	static int c;
	static int ans;
	static void solve(int n, int x, int y) {
		if(n==2) {
			for(int i=0; i<n; i++) {
				for(int j=0; j<n; j++) {
					if(x+i == r && y+j == c)
						ans = cnt;
					cnt++;
				}
			}
		}
		if(n>0) {
			n /= 2;
			for(int i=0; i<2; i++) {
				for(int j=0; j<2; j++) {
					solve(n, x+i*n, y+j*n);
				}
			}
		}

	}

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int n = scan.nextInt();
		n = (int)Math.pow(2, n);
		r = scan.nextInt();
		c = scan.nextInt();
		solve(n, 0, 0);
		System.out.println(ans);
	}
}
