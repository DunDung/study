package baekjoon.dp;

import java.util.Scanner;

//1, 2, 3 ¥ı«œ±‚
public class Q9095 {
	
	public static void main(String [] args) {
		Scanner scan = new Scanner(System.in);
		int n = scan.nextInt();
		int [] dp = new int[n+1];
		
		dp[0] = 0;
		dp[1] = 0;
		dp[2] = 1;
		for(int i=3; i<=n; i++) {
			dp[i] = dp[i-1]+dp[i-2]+dp[i-3];
		}
		System.out.println(dp[n]);
	}

}
