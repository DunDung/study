package baekjoon.divide_and_conquer;

import java.util.Scanner;

//Z
public class Q1074 {
	static int cnt = 0 ;
	static void solve(int n, int x, int y, int r, int c) {
		if(n==2) {
			for(int i=0; i<n; i++) {
				for(int j=0; j<n; j++) {
					if(x+i==r && y+j == c)
						return;
					cnt++;
				}
			}
		}
		n /= 2;
		for(int i=0; i<2; i++) {
			for(int j=0; j<2; j++) {
				solve(n, x+i*n, y+j*n, r, c);
			}
		}
	}

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int n = scan.nextInt();
		n = (int)Math.pow(2, n);
		int r = scan.nextInt();
		int c = scan.nextInt();
		solve(n, 0, 0, r, c);
		System.out.println(cnt);

	}
}
