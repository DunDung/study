package baekjoon.exhaustive_search;

import java.util.Scanner;

//¿µÈ­°¨µ¶ ¼ò
public class Q1436 {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int n = scan.nextInt();
		int k = 666;
		int cnt = 1;
		while(cnt != n) {
			k++;
			int temp = k;
			while(temp >= 666) {
				if(temp % 666 == 0) {
					cnt++;
					break;
				}
				temp /= 10;
			}
			
		}
		System.out.println(k);
	}
}
