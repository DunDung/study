package baekjoon.greedy;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;
import java.util.Scanner;

//¼ö ¹­±â
public class Q1744 {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int n = scan.nextInt();
		int [] a = new int[n];
		List<Integer> list = new ArrayList<>();

		for(int i=0; i<n; i++){
			a[i] = scan.nextInt();
		}

		Arrays.sort(a);
		int index = 0;
		int zero = -1;
		for(int i=n-1; i>=0; i--) {
			if(a[i]>0) {
				if(i-1 >= 0 && a[i-1]>0)
					list.add(a[i--] * a[i]);
				else
					list.add(a[i]);
			}
			else if(a[i]<0) {
				index = i;
				break;
			}
			else
				zero = 0;
		}
		for(int i=index; i>=0; i--){
			if(a[i]<0) {
				if(i-1>=0 && a[i-1]<0)
					list.add(a[i--] * a[i]);
				else {
					if(zero==0)
						list.add(0 * a[i]);
					else
						list.add(a[i]);
				}
			}
			
		}

		int ans = 0;
		for(int i=0; i<list.size(); i++){
			ans +=list.get(i);
		}
		System.out.println(ans);

	}

}
