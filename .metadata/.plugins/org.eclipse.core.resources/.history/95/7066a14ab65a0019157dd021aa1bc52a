package baekjoon.dp;

import java.util.Scanner;

public class Q9095 {
	
	public static void main(String [] args) {
		Scanner scan = new Scanner(System.in);
		int n = scan.nextInt();
		int [] dp = new int[n+1];
		
		dp[1] = 0;
		for(int i=2; i<n; i++) {
			dp[i] = dp[i-1]+i-1;
		}
		System.out.println(dp[n]);
	}

}
